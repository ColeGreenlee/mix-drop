# Test Environment Variables
# These are used during test execution

# Database (will be overridden by Testcontainers)
DATABASE_URL="postgresql://test:test@localhost:5432/mixdrop_test"

# Redis (will be overridden by Testcontainers)
REDIS_URL="redis://localhost:6379"

# S3/MinIO (will be overridden by Testcontainers)
S3_ENDPOINT="http://localhost:9000"
S3_PUBLIC_ENDPOINT="http://localhost:9000"
S3_BUCKET="test-bucket"
S3_REGION="us-east-1"
S3_ACCESS_KEY="test-access-key"
S3_SECRET_KEY="test-secret-key"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="test-secret-key-for-testing-only"

# Auth
ENABLE_LOCAL_AUTH=true
NEXT_PUBLIC_ENABLE_LOCAL_AUTH=true

# Admin
ADMIN_EMAILS="admin@test.com"

# Disable external services during tests
NODE_ENV="test"

{
  "title": "MixDrop - Application Overview",
    "uid": "mixdrop-overview",
    "tags": ["mixdrop", "overview"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (per minute)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate({service=\"app\"} |= \"HTTP\" [1m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ]
      },
      {
        "id": 2,
        "title": "Error Rate (per minute)",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate({service=\"app\"} |~ \"level.*error\" [1m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": { "fillOpacity": 10 }
          }
        }
      },
      {
        "id": 3,
        "title": "Requests by HTTP Method",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 8, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum by (method) (count_over_time({service=\"app\"} | json | method != \"\" [5m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ]
      },
      {
        "id": 4,
        "title": "Response Status Codes",
        "type": "bargauge",
        "gridPos": { "x": 8, "y": 8, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum by (statusCode) (count_over_time({service=\"app\"} | json | statusCode != \"\" [5m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 5,
        "title": "Recent Logs",
        "type": "logs",
        "gridPos": { "x": 0, "y": 16, "w": 24, "h": 12 },
        "targets": [
          {
            "expr": "{service=\"app\"}",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      }
    ]
}

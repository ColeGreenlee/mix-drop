{
  "title": "MixDrop - Application Overview",
    "uid": "mixdrop-overview",
    "tags": ["mixdrop", "overview"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (per minute)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate({job=\"mixdrop\"} |= \"HTTP\" [1m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxDataPoints": 500,
            "interval": "30s"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "fieldConfig": {
          "defaults": {
            "noValue": "No data",
            "custom": {
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Error Rate (per minute)",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate({job=\"mixdrop\"} |~ \"level.*error\" [1m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxDataPoints": 500,
            "interval": "30s"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": { "fillOpacity": 10 },
            "noValue": "No errors"
          }
        }
      },
      {
        "id": 3,
        "title": "Requests by HTTP Method",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 8, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum by (method) (count_over_time({job=\"mixdrop\"} | json | method != \"\" [2m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxDataPoints": 100
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "showLegend": true
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          }
        },
        "fieldConfig": {
          "defaults": {
            "noValue": "No data"
          }
        }
      },
      {
        "id": 4,
        "title": "Response Status Codes",
        "type": "bargauge",
        "gridPos": { "x": 8, "y": 8, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum by (statusCode) (count_over_time({job=\"mixdrop\"} | json | statusCode != \"\" [2m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxDataPoints": 100
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true,
          "text": {
            "valueSize": 20
          }
        },
        "fieldConfig": {
          "defaults": {
            "noValue": "No data"
          }
        }
      },
      {
        "id": 5,
        "title": "Recent Logs",
        "type": "logs",
        "gridPos": { "x": 0, "y": 16, "w": 24, "h": 12 },
        "targets": [
          {
            "expr": "{job=\"mixdrop\"}",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxLines": 1000
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        },
        "fieldConfig": {
          "defaults": {
            "noValue": "No logs available"
          }
        }
      }
    ]
}

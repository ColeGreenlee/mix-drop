{
  "title": "MixDrop - Upload Analytics",
    "uid": "mixdrop-uploads",
    "tags": ["mixdrop", "uploads"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1m",
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Upload Success Rate (Last 15 min)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"mixdrop\"} |= \"upload_mix\" |~ \"level.*info\" [15m])) / sum(count_over_time({job=\"mixdrop\"} |= \"upload_mix\" [15m])) * 100",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxDataPoints": 100
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 80, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            },
            "noValue": "No data"
          }
        }
      },
      {
        "id": 2,
        "title": "Uploads Over Time",
        "type": "timeseries",
        "gridPos": { "x": 8, "y": 0, "w": 16, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate({job=\"mixdrop\"} |= \"Uploading\" [2m]))",
            "refId": "A",
            "legendFormat": "Upload Attempts",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxDataPoints": 500,
            "interval": "30s"
          },
          {
            "expr": "sum(rate({job=\"mixdrop\"} |= \"upload_mix\" |~ \"level.*info\" [2m]))",
            "refId": "B",
            "legendFormat": "Successful Uploads",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxDataPoints": 500,
            "interval": "30s"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "fillOpacity": 10
            },
            "noValue": "No data"
          }
        }
      },
      {
        "id": 3,
        "title": "Upload Errors",
        "type": "table",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 10 },
        "targets": [
          {
            "expr": "{job=\"mixdrop\"} |= \"upload_mix\" |~ \"level.*error\"",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxLines": 100
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {}
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "noValue": "No upload errors"
          }
        }
      },
      {
        "id": 4,
        "title": "Recent Successful Uploads",
        "type": "logs",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 10 },
        "targets": [
          {
            "expr": "{job=\"mixdrop\"} |= \"Uploading\" |~ \"level.*info\"",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxLines": 200
          }
        ],
        "options": {
          "showTime": true,
          "enableLogDetails": true,
          "sortOrder": "Descending"
        },
        "fieldConfig": {
          "defaults": {
            "noValue": "No uploads"
          }
        }
      },
      {
        "id": 5,
        "title": "Rate Limit Hits",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 18, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate({job=\"mixdrop\"} |= \"Rate limit exceeded\" [1m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" },
            "maxDataPoints": 500,
            "interval": "30s"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": { "fillOpacity": 30 },
            "noValue": "No rate limits"
          }
        }
      }
    ]
}

{
  "title": "MixDrop - Database Performance",
    "uid": "mixdrop-database",
    "tags": ["mixdrop", "database", "prisma"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Database Query Rate",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate({job=\"mixdrop\"} |= \"DB Query\" [1m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": { "fillOpacity": 10 }
          }
        }
      },
      {
        "id": 2,
        "title": "Database Errors",
        "type": "stat",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 8 },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"mixdrop\"} |= \"DB Error\" [1h]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Database Warnings",
        "type": "stat",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 8 },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"mixdrop\"} |= \"DB Warning\" [1h]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 5, "color": "yellow" },
                { "value": 20, "color": "orange" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Query Performance (Slow Queries > 100ms)",
        "type": "logs",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 10 },
        "targets": [
          {
            "expr": "{job=\"mixdrop\"} |= \"DB Query\" | json | duration > 100",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ],
        "options": {
          "showTime": true,
          "enableLogDetails": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 5,
        "title": "Queries by Model",
        "type": "piechart",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 10 },
        "targets": [
          {
            "expr": "sum by (target) (count_over_time({job=\"mixdrop\"} |= \"DB Query\" | json | target != \"\" [5m]))",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 6,
        "title": "Recent Database Operations",
        "type": "logs",
        "gridPos": { "x": 0, "y": 18, "w": 24, "h": 10 },
        "targets": [
          {
            "expr": "{job=\"mixdrop\"} |~ \"DB (Query|Error|Warning)\"",
            "refId": "A",
            "datasource": { "type": "loki", "uid": "Loki" }
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "enableLogDetails": true,
          "sortOrder": "Descending"
        }
      }
    ]
}

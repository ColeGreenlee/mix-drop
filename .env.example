# Database
DATABASE_URL="file:./data/mixdrop.db"

# Redis Cache
REDIS_URL="redis://localhost:6379"

# S3/MinIO Configuration
S3_ENDPOINT="http://localhost:9000"
S3_BUCKET="mixdrop"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_REGION="us-east-1"
S3_FORCE_PATH_STYLE="true" # Required for MinIO

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="dev-secret-change-in-production"

# OAuth Provider (Mock OAuth2 Server for local dev)
# For production, replace these with your actual SSO provider
OAUTH_CLIENT_ID="mixdrop"
OAUTH_CLIENT_SECRET="mixdrop-secret"
OAUTH_ISSUER="http://localhost:8080/default"
OAUTH_AUTHORIZATION_URL="http://localhost:8080/default/authorize"
OAUTH_TOKEN_URL="http://localhost:8080/default/token"
OAUTH_USERINFO_URL="http://localhost:8080/default/userinfo"

# Admin Configuration
# Comma-separated list of email addresses that should have admin role
# These users will automatically become admins when they first sign in
ADMIN_EMAILS="admin@example.com,other-admin@example.com"

# Local Authentication (for development)
# Set to "true" to enable username/password login alongside OAuth
# Default credentials: admin/admin (created by running: pnpm db:seed)
ENABLE_LOCAL_AUTH="true"
NEXT_PUBLIC_ENABLE_LOCAL_AUTH="true"

# Logging Configuration
# Log level: debug, info, warn, error
LOG_LEVEL="debug"
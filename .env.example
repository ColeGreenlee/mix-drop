# Database
DATABASE_URL="file:./data/mixdrop.db"

# Redis Cache
REDIS_URL="redis://localhost:6379"

# S3/MinIO Configuration
S3_ENDPOINT="http://localhost:9000"
S3_BUCKET="mixdrop"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_REGION="us-east-1"
S3_FORCE_PATH_STYLE="true" # Required for MinIO

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="dev-secret-change-in-production"

# OAuth Provider (Mock OAuth2 Server for local dev)
# For production, replace these with your actual SSO provider
OAUTH_CLIENT_ID="mixdrop"
OAUTH_CLIENT_SECRET="mixdrop-secret"
OAUTH_ISSUER="http://localhost:8080/default"
OAUTH_AUTHORIZATION_URL="http://localhost:8080/default/authorize"
OAUTH_TOKEN_URL="http://localhost:8080/default/token"
OAUTH_USERINFO_URL="http://localhost:8080/default/userinfo"